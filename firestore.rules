rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * WEDDING SITE SECURITY RULES
     * 
     * Implementa acesso para convidados (leitura/RSVP) e controle total para administradores.
     */

    // --- Funções Auxiliares ---

    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Verifica se o usuário é um administrador.
     */
    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        request.auth.uid == "X8JMY0mx3gdmjFLZ8mnkWBK5bvH2" ||
        request.auth.token.email == "admin@casamento.com" ||
        request.auth.token.email == "jviitor2628@gmail.com"
      );
    }

    // --- Regra Global de Admin ---
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // --- Regras de Coleção Específicas ---

    /**
     * @description Presentes: Convidados veem, Admin gerencia.
     */
    match /gifts/{giftId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description RSVPs: Convidados criam e listam (para verificar duplicidade), Admin gerencia.
     */
    match /rsvps/{rsvpId} {
      allow create, list: if true;
      allow get, update, delete: if isAdmin();
    }

    /**
     * @description Lista Geral de Convidados: 
     * Público pode ler para validar o convite no RSVP.
     */
    match /invitees/{inviteeId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Configurações do Evento: Público lê, Admin edita.
     */
    match /event_settings/{settingId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Configurações do Manual: Público lê, Admin edita.
     */
    match /manual_settings/{settingId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Imagens do Manual: Público lê, Admin edita.
     */
    match /manual_images/{imageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Controle de acesso administrativo.
     */
    match /roles_admin/{adminId} {
      allow get: if isSignedIn() && (request.auth.uid == adminId || isAdmin());
      allow list, write: if isAdmin();
    }
  }
}